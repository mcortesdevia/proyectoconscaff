<p id="notice"><%= notice %></p>

<h1>Cats</h1>

<div class="container">
  <div class="row">
    <% @cats.each do |cat| %>

    <div class="well col-md-4">

      <h3><%= cat.name %></h3>
        <%= image_tag cat.picture, class: "img-responsive" %>
        <blockquote>
          <%= cat.description %>
        </blockquote>
        <%= cat.age %>

      <%= link_to 'Show', cat, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_cat_path(cat), class: "btn btn-info" %>
      <%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Cat', new_cat_path %>
